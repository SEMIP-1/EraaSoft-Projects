@model List<DoctorVM>

<h1>Book Appointment</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img class="card-img" src="~/Images/@item.Img" style="width: 300px; height: auto;" alt="Doctor Image">
                <div class="card-body">
                    <h5 class="card-title">Name: @item.Name </h5>
                    <p class="card-text">Specialization: @item.Specialization</p>
                    <a href="@Url.Action("CompleteAppointment", "Home", new { doctorId = item.Id })" class="btn btn-primary">Book Appointment</a>
                </div>
            </div>
        </div>
    }
</div>
